  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Launch",
      "type": "cppdbg",
      "request": "launch",
      // "program": "${workspaceFolder}/build/assembler",
      //"program": "${workspaceFolder}/build/linker",
      "program": "${workspaceFolder}/build/emulator",
      // "args": ["tests/interrupt.s" , "-o", "tests/assembled.o",],
      //"args": ["tests/file1.s" , "-o", "tests/assembled.o",],
      //"args": [ "tests/reloc1.o", "tests/reloc2.o", "-o", "tests/reloc.o", "-relocatable", ],
      // "args": ["tests/file1.o", "tests/file2.o", "-o", "tests/a.hex", "-hex", "-place=text@0x40000000", "-place=data@0x10000000", ],
      // "args": ["tests/a.hex"],
      // "args": ["nivo-b/program.hex"],
      // "args": ["nivo-b/isr_terminal.s", "-o", "nivo-b/isr_terminal.o",],
      "args": [ "tests/program.hex" ],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
          {
              "description": "Enable pretty-printing for gdb",
              "text": "-enable-pretty-printing",
              "ignoreFailures": true
          },
          {
              "description": "Set Disassembly Flavor to Intel",
              "text": "-gdb-set disassembly-flavor intel",
              "ignoreFailures": true
          }
      ],
    }

  ]
}